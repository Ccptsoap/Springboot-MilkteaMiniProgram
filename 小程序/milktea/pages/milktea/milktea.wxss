.container {
  padding: 0rpx;
  position: relative;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.index {
  display: flex;
  width: 100%;
  height: 100%;
}

.index-top {
  height: 200px;
}

.index-left {
  flex: 1;
  background: #f5f7f9;
}

.index-right {
  flex: 3;
}

.index-left-text {
  padding: 0 10rpx;
  height: 50px;
  line-height: 50px;
}

.index-right-text {
  box-sizing: border-box;
  padding: 40rpx 10rpx;
  height: 60px;
}

.index-right-text-top {
  height: 40rpx;
  background: #C4F5FF;
}

.index-right-text-top text{
  font-size: 30rpx;
  color: #65C2F0;
}

.mark {
  position: absolute;
  top: 200px;
  height: 100vh;
  width: 100%;
  z-index: 10;
}

.index-right-text-top {
  height: 50rpx;
}

.rec-img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 16rpx;
}

.eachOne {
  display: flex;
}

.navi-bar{
  color: #65C2F0;
}

.rec-name {
  font-size: 30rpx;
  padding: 28rpx 0rpx;
  color: #808180;
  margin-left: 30rpx;
}

.rec-price{
  font-size: 30rpx;
  padding: 28rpx 0rpx;
  color: #65C2F0;
  display: flex;
  margin-left:auto;
}
