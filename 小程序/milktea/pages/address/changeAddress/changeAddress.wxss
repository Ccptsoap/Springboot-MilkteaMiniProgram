/* pages/address/changeAddress/changeAddress.wxss */
page {
  background-color: #f0f0f0;
}

.u {
  justify-content: center;
  display: flex;
  padding: 30px 0;
  flex-direction: row;
  background-color: #66CCFF
}

.u .logo {
  display: flex;
  padding: 0 20px;
}

.u .logo .image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 2px solid #ddd;
}

.des .uname {
  color: #fff;
  font-weight: bold;
  font-size: 15pt;
  padding: 2px 0;
}

.des .phone {
  color: #fff;
  font-size: 10pt;
  margin-top: 5px;
}


.ub {
  margin-top: 10px;
  border-top: 1rpx solid #ccc;
  background-color: #fff;
}

.ub .item {
  width: 100%;
  height: 90px;
  display: flex;
  line-height: 45px;
  flex-direction: row;
  border-bottom: 1rpx solid #ddd;
}

.ub .item .text {
  width: 50px;
  height: 45px;
  margin-left: 10px;
  font-size: 12pt
}

.ub .item .input {
  align-items: center;
  display: flex;
  margin-left: 10px;
}

.ub .item .checkbox {
  align-items: center;
  display: flex;
  margin-left: 30px;
}

.btn {
  width: 70%;
  height: 40px;
  margin-top: 40rpx;
  background-color: #66CCFF;
}

.btn .text {
  font-size: 12pt;
  color: white;
}

/* 未选中的 背景样式 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  /* 圆角 */
  width: 30rpx;
  /* 背景的宽 */
  height: 30rpx;
  /* 背景的高 */
}

/* 选中后的 背景样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: gray;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}